# volume
bindsym XF86AudioRaiseVolume exec amixer sset 'Master' 5%+
bindsym XF86AudioLowerVolume exec amixer sset 'Master' 5%-
bindsym XF86AudioMute exec amixer sset 'Master' toggle
bindsym XF86AudioMicMute exec amixer set 'Capture' toggle # mute Mic

# media
bindsym $mod+Home exec playerctl previous
bindsym $mod+Prior exec playerctl next
bindsym $mod+Insert exec playerctl play-pause

# lockscreen
bindsym $mod+Delete exec /usr/bin/i3lock-fancy -g
bindsym XF86Sleep exec /usr/bin/i3lock-fancy -g

# brightness
bindsym XF86MonBrightnessUp exec xbacklight -inc 10
bindsym XF86MonBrightnessDown exec xbacklight -dec 10

# music supermenu
bindsym $mod+m exec /home/adrien/.i3/i3play

# manage display modes
