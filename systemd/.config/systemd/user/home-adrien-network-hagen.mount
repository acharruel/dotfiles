[Unit]
Description=Mount acharruel from hagen as sshfs
After=network-online.target
Wants=network-online.target

[Install]
WantedBy=default.target

[Mount]
What=acharruel@hagen:/local/acharruel
Where=/home/adrien/network/hagen
Type=fuse.sshfs
Options=_netdev,reconnect,ServerAliveInterval=30,ServerAliveCountMax=5,x-systemd.automount
TimeoutSec=60
