[Unit]
Description=Mount acharruel from NX NFS as sshfs
After=network-online.target
Wants=network-online.target

[Install]
WantedBy=default.target

[Mount]
What=acharruel@hagen:/home/users/acharruel
Where=/home/adrien/network/nfs-acharruel
Type=fuse.sshfs
Options=_netdev,reconnect,ServerAliveInterval=30,ServerAliveCountMax=5,x-systemd.automount
TimeoutSec=60
